        </nav>
        <div class="container">
            <div class="row">
                <div class="col-sm-2" id="fixed">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="http://localhost:8000/jeu/">Jeux</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="http://localhost:8000/genre/">Genres</a>
                        </li>
                    </ul>
                </div>
                <div class="col-sm-10">
                    {% block body %}
        
                    {% endblock %}
                </div>
            </div>
        </div>
    </body>
</html>